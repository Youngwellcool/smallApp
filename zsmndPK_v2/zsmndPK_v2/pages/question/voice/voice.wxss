.score{
  width: 600rpx;
  margin-top: 110rpx;
  margin-left: 70rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}
.score_row{
   flex-direction:row;
   flex-wrap: wrap;
   display: flex;
}
.score view{
  float: left;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:50rpx;
  text-align: center;
}
.achievement{
  width:99rpx;
  height:49rpx;
  border:1rpx solid rgba(0,0,0,1);
}
.subject{
  width:49rpx;
  height:49rpx;
  border:1rpx solid rgba(0,0,0,1);

}
.subject .correct{
  width: 35rpx;
  height: 26rpx;
}
.subject .wrong{
  width: 25rpx;
  height: 26rpx;
}
/* 倒计时 */
.time{
  background: url('https://ysm.onedisme.com/dayimage/simulation/countdown.png');
  width: 150rpx;
  height: 150rpx;
  background-size: 100% 100%;
  font-size:68rpx;
  font-family:Adobe Heiti Std R;
  font-weight:normal;
  color:rgba(51,51,51,1);
  line-height:150rpx;
  text-align: center;
  position: absolute;
  right: 4rpx;
  top: 14rpx;
}
