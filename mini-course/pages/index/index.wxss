/**index.wxss**/
page{
  height: 100%;
  background-color: #1a1a1d;
}
.fl{
  float:left;
}
.fr{
  float: right;
}
.hide{
  display: none !important;
}
.show{
  display: block;
}
.videoBox{
  overflow: hidden;
  height: 100%;
  position: relative;
}
.video{
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  top:0;
  left: 0;
}
.transfrom{
  transition: transform  0.6s ease-out;
}
.videoitem{
  height: 100%;
  background:#000000;
  position: relative;
}
.videoitem video{
  width: 100%;
  height: 100vh;
}
.preImage{
  display: block;
  width: 100%;
}
/* 右侧按钮 */
.btnBox{
  width: 100rpx;
  position: absolute;
  right: -2%;
  bottom: -20%;
  transform: translate(-50%,-50%);
}
.btnBox image{
  display: block;
}
.btnBox view,.btnBox button{
  margin-bottom: 40rpx;
}
.btnBox button{
  padding: 0;
  background: transparent;
}
.btnBox view image,.btnBox button image{
  margin: 0 auto;
}
.btnBox view text,.btnBox button text{
  line-height: 50rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
}
.btnBox .btnTx{
  position: relative;
}
.btnBox .btnTx .TX{
  width: 94rpx;
  height: 94rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  overflow: hidden;
}
.btnBox .btnTx .followAdd{
  width: 39rpx;
  height: 39rpx;
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius:50%;
  overflow: hidden; 
}
.btnBox .btnLike image{
  width: 80rpx;
  height: 78rpx;
}
.btnBox .btnShare image{
  width: 70rpx;
  height: 59rpx;
}
.btnBox .btnReview image{ 
  width: 70rpx;
  height: 72rpx;
}
.btnBox .btnShut image{
  width: 49rpx;
  height: 49rpx;
}
.video-name-div{
  position: absolute;
  width:75%;
  bottom:4%;
}
/* 详情描述 */
.describe{
  position: absolute;
  width:75%;
  left:5%;
  bottom:12%;
}
.describe .nameAddr text{
  font-size: 30rpx;
  line-height: 58rpx;
  color: #fff;
}
.describe .addr image{
  width: 22rpx;
  height: 28rpx;
  margin: 15rpx 10rpx 0 0;
}
.describe .descText{
  font-size: 28rpx;
  color: #fff;
  line-height: 38rpx;
}
.describe .labelS text{
  float: left;
  font-size: 28rpx;
  color: #fff;
  line-height: 48rpx;
  margin-right: 10rpx;
}
slider{
  display: 100%;
  width: 100%;
  position: absolute;
  bottom: -35rpx;
  left: 50%;
  transform: translate(-50%,-50%);
  margin: 0;
}

.playImg{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  bottom: 45%;
  left: 43%;
}
.review-div{
  height:700rpx;
}
.review-div-view{
  height:700rpx;
  overflow: scroll;
  float:left;
  width:100%;
}
.review-div-view .not-review-view{
  margin: 20% 0 0 37%;
}
.review-div-list{
  float: left;
  width: 100%;
  margin: 30rpx 0 30rpx 20rpx;
  border-bottom: 1px solid #262626;
}
.review-detail-left{
  float: left;
  width: 8%;
  margin-right: 7rpx;
}
.review-detail-right{
  float: left;
  width: 88%;
}
.review-detail-right .review-detail-right-nickname{
  font-size: 14px;
}
.review-avatar{
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  /* border: 2px solid #fff; */
  overflow: hidden;
  margin-right: 15rpx;
}
text{
  word-break: keep-all;
  word-wrap: break-word;
  font-size: 12px;
}
.review-div .van-action-sheet__header{
  background-color: #1a1a1d;
  color: white;
}
.review-div .van-popup--bottom{
  background-color: #1a1a1d;
  color: white;
}
.review-div .van-hairline--bottom:after{
  border-bottom: 2px solid #262626;
}

.commentInput{
  width:100%;
  background-color:#1a1a1d;
  font-size:28rpx;
  border-radius:15rpx;
  display: flex;
  align-items: center;
}
.input{
  width:100%;
  padding: 15rpx;
  font-size: 30rpx;
  margin: 0 auto;
  overflow: hidden;
  line-height-step:20rpx;
  border: 0;
  background-color: #050706;
}
.send{
  width: 20%;
  height: 80rpx;
  color: #275FCC;
  font-size: 34rpx;
  background-color: #050706;
  border: 0;
}