page{
  height: 100%;
  background: #fff!important;
}
.feedback-wrap {
  padding: 40rpx 40rpx 180rpx;
}
.title {
  font-size: 30rpx;
  color: #333;
}
.types-wrap {
  margin: 40rpx 0 58rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.types-wrap .type-item {
  padding: 0 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #797A7B;
  border-radius: 100rpx;
  background: #F0F5F9;
}
.types-wrap .type-item.checked {
  color: #007DFF;
  background-color: #C8E2FC;
}

.content-wrap textarea {
  width: 100%;
  height: 400rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #F8F8F8;
  font-size: 24rpx;
  color: #999;
  border-radius: 12rpx 12rpx 0 0;
}
.content-wrap input {
  margin-top: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 30rpx;
  background-color: #F8F8F8;
  font-size: 24rpx;
  color: #999;
  border-radius: 12rpx;
}

.btn-wrap {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 50;
}
.btn-wrap button {
  padding: 0 10rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  background-color: #007DFF;
  border-radius: 0;
}
.img-wrap {
  display: flex;
  justify-content: flex-end;
  flex-wrap: wrap;
  padding: 0 20rpx 20rpx;
  background-color: #F8F8F8;
  border-radius: 0 0 12rpx 12rpx;
}
.add-img {
  display: flex;
  align-items:center;
  justify-content: center; 
  width: 88rpx;
  height: 88rpx;
  font-size: 50rpx;
  border: 1px solid #ccc;
  color: #ccc;
}
.add-img text {
  /* margin-top: -28rpx; */
}
.img-item {
  position: relative;
  margin-right:11rpx ;
}
.img-item .del {
  position: absolute;
  height:38rpx;
  width:38rpx;
  line-height: 1.2;
  top: -10rpx;
  right: -10rpx;
  color: #817b79;
  background-color:#fff;
  border-radius:100%;
}
.img-item image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 10rpx;
  vertical-align: middle;
}