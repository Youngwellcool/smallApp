.header-title {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 9999;
}

.header-title.active {
  background: #FFF;
  box-shadow: none;
  transition: .5s background-color;
}

.title-bar {
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
}

.status-bar {
  background: #FFF;
}

.right-icon {
  width: 100rpx;
  height: 100rpx;
}

.title {
  width: 550rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
  color: #FFF;
  font-weight: bold;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.title.active {
  color: #3c3c3c;
}

.left-icon {
  width: 100rpx;
  height: 100rpx;
}

/*箭头部分*/
.navigator {
  width: 36rpx;
  height: 36rpx;
  margin-top: 36rpx;
  margin-left: 32rpx;
}

.navigator:after {
  content: '';
  display: block;
  width: 22rpx;
  height: 22rpx;
  border-right: 4rpx solid #FFF;
  border-top: 4rpx solid #FFF;
  transform: rotate(225deg);
}

.actives {
  width: 36rpx;
  height: 36rpx;
  margin-top: 36rpx;
  margin-left: 32rpx;
}

.actives:after {
  content: '';
  display: block;
  width: 22rpx;
  height: 22rpx;
  border-right: 4rpx solid #000;
  border-top: 4rpx solid #000;
  transform: rotate(225deg);
}

